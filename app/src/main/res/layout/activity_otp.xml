<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".OTP">

    <ImageView
        android:layout_width="125dp"
        android:layout_height="135dp"
        android:src="@drawable/otp_page_image"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        ></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify your mobile number"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        ></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Allow Hotscrap to access your messages to \nconfirm the OTP we sent to"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"

        ></TextView>

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="290dp"
        android:layout_centerHorizontal="true"
        android:text="9874631316"
        android:textAlignment="center"
        ></TextView>

    <ImageButton
        android:id="@+id/edit_phonenum"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_edit_black_24dp"
        android:layout_marginTop="285dp"
        android:layout_marginLeft="250dp"
        android:backgroundTint="@color/colorWhite"
        ></ImageButton>

    <EditText
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginTop="340dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:hint="OTP"
        ></EditText>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:textColor="@color/colorWhite"
        android:background="@drawable/blue_button"
        android:layout_marginTop="420dp"
        android:layout_centerHorizontal="true"
        android:shadowDx="@android:integer/config_shortAnimTime"
        android:id="@+id/btn_verify" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Didn't get the code?"
        android:layout_marginTop="500dp"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        ></TextView>

    <TextView
        android:id="@+id/resend_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESEND"
        android:textColor="@color/colorYellow"
        android:textStyle="bold"
        android:layout_marginTop="540dp"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        ></TextView>

</RelativeLayout>