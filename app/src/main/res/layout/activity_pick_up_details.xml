<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".PickUpDetails">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="170dp"
                        android:layout_height="150dp"
                        android:src="@drawable/pickuppagelogo"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        ></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pickup Details"
                        android:textSize="25dp"
                        android:layout_gravity="center"
                        ></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enter your details below"
                        android:textSize="17dp"
                        android:layout_gravity="center"
                        ></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="250dp"
                    >

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:rowCount="3">

                        <TextView
                            android:layout_width="205dp"
                            android:layout_height="wrap_content"
                            android:text="Pin Code(6-digit)"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:textSize="15dp"
                            android:textAlignment="center"

                            ></TextView>

                        <TextView
                            android:layout_width="205dp"
                            android:layout_height="wrap_content"
                            android:text="City"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:textSize="15dp"
                            android:textAlignment="center"
                            ></TextView>

                        <EditText
                            android:id="@+id/pin_code"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="13dp"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:textSize="20dp"
                            android:textAlignment="center"
                            android:singleLine="true"
                            ></EditText>

                        <EditText
                            android:id="@+id/city_name"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_row="1"
                            android:layout_column="1"
                            android:textSize="20dp"
                            android:textAlignment="center"
                            android:singleLine="true"
                            ></EditText>

                    </GridLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="350dp"
                    >
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:rowCount="6"
                        android:columnCount="1"
                        >
                        <TextView
                            android:text="Flat / House No. / Floor / Building"
                            android:textSize="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_row="0"
                            ></TextView>

                        <EditText
                            android:layout_width="match_parent"
                            android:textSize="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_row="0"
                            ></EditText>

                        <TextView
                            android:text="Colony / Street / Locality"
                            android:textSize="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_row="1"
                            ></TextView>

                        <EditText
                            android:layout_width="match_parent"
                            android:textSize="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_row="2"
                            ></EditText>

                        <TextView
                            android:text="Landmark"
                            android:textSize="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_row="3"
                            ></TextView>

                        <EditText
                            android:layout_width="match_parent"
                            android:textSize="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_row="4"
                            ></EditText>

                    </GridLayout>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tag this address"
                    android:textSize="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="590dp"
                    android:textStyle="bold"
                    ></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="630dp"
                    android:gravity="center"
                    >
                    <Button
                        android:id="@+id/home"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:text="Home"
                        android:textSize="13dp"
                        android:onClick="onOutLinedButtonClicked"
                        android:background="@drawable/left_button"
                        ></Button>

                    <Button
                        android:id="@+id/work"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:text="Work"
                        android:textSize="13dp"
                        android:onClick="onOutLinedButtonClicked"
                        android:background="@drawable/middle_button"
                        ></Button>

                    <Button
                        android:id="@+id/other"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:text="Other"
                        android:textSize="13dp"
                        android:onClick="onOutLinedButtonClicked"
                        android:background="@drawable/right_button"
                        ></Button>

                </LinearLayout>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Make this as billing address"
                    android:layout_marginTop="700dp"
                    android:layout_marginLeft="20dp"
                    ></CheckBox>

                <Button
                    android:id="@+id/btn_pickupdetails_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="730dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/blue_button"
                    android:text="Next"
                    android:textColor="@color/colorWhite">

                </Button>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>